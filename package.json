{
  "name": "screeps-console",
  "publisher": "screeps-tools",
  "displayName": "Screeps Console",
  "description": "Connect to Screeps Console via WebSocket",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:screeps-console.open",
    "onCommand:screeps-console.resetToken",
    "onTerminalProfile:screeps-console.profile",
    "onView:screeps-console.view"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "screeps-console.open",
        "title": "Screeps: Open Console"
      },
      {
        "command": "screeps-console.showPanel",
        "title": "Screeps: Show Panel Console"
      },
      {
        "command": "screeps-console.resetToken",
        "title": "Screeps: Reset Auth Token"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "screepsConsolePanel",
          "title": "Screeps",
          "icon": "media/screeps.svg"
        }
      ]
    },
    "views": {
      "screepsConsolePanel": [
        {
          "type": "webview",
          "id": "screeps-console.view",
          "name": "Console"
        }
      ]
    },
    "terminal": {
      "profiles": [
        {
          "title": "Screeps Console",
          "id": "screeps-console.profile"
        }
      ]
    },
    "configuration": {
      "title": "Screeps Console",
      "properties": {}
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^16.x",
    "@types/vscode": "^1.75.0",
    "@types/ws": "^8.5.4",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "ws": "^8.13.0"
  }
}
